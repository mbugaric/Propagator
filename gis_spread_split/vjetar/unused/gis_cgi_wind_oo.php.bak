			$wind_s=$this->loadFromAsc("windSpeed", $map->extent->minx, $map->extent->miny, $x_step, $y_step, $numtocaka, true, $WebDir, $korisnik);

	
			$points=Array();



			for($i=0;$i<$numtocaka;$i++)
